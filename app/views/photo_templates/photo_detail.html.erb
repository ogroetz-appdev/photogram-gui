<div>
  <h1>
    Photo Details
  </h1>
</div>
<dl>
  <dt>Image</dt>
  <dd><img src="<%= @photo.image %>"></dd>
  <dt>Caption</dt>
  <dd><%= @photo.caption %></dd>
  <dt>Owner</dt>
  <dd><%= @photo.poster.username %></dd>
  <dt>Posted</dt>
  <dd><%= @photo.created_at %></dd>
  <dt>Edit photo</dt>
  <dd>
    <form action="/update_photo/<%= @photo.id %>">
      <label for="image">Image</label>
      <input id="image" name="image" value="<%= @photo.image %>">
      <label for="caption">Caption</label>
      <textarea id="caption" name="caption"><%= @photo.caption %></textarea>
      <button>Edit photo</button>
    </form>
  </dd>
  <dt>
    Delete photo
  </dt>
  <dd>
    <a href="/delete_photo/<%= @photo.id %>">Delete this photo</a>
  </dd>
</dl>
<div>
  <h2>Comments</h2>
</div>
<div style="padding-top: 10px;">
  <table>
    <tr>
      <th>
        Commenter
      </th>
      <th>
        Comment
      </th>
      <th>
        Posted
      </th>
    </tr>

      <% @photo.comments.each do |comment| %>
      <tr>
        <td><%= comment.commenter.username %></td>
        <td><%= comment.body %></td>
        <td><%= comment.created_at %></td>
      </tr>
      <% end %>
  </table>
</div>
<div>
  <h3>Add a new comment</h3>
  <div>
    <form action="/add_comment/<%= @photo.id %>">
      <label for="photo_id">Photo ID</label>
      <input id="photo_id" name="photo_id" value="<%= @photo.id %>">
      <label for="author_id">Author ID</label>
      <input id="author_id" name="author_id" >
      <label for="comment">Comment</label>
      <textarea id="comment" name="comment" placeholder="Enter a comment..."></textarea>
      <button>Add comment</button>
    </form>
  </div>
</div>
