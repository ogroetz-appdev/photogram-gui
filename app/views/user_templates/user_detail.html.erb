<div>
  <h1>
    <%= @user_name %>
  </h1>
</div>
<dl>
  <dt>ID</dt>
  <dd><%= @user.id %></dd>
  <dt>Edit user</dt>
  <dd>
    <form action="/users/<%= @user_name %>">
      <label for="edit_name">Username</label>
      <input id="edit_name" name="edit_name" value="<%= @user_name %>">
      <button>Update user</button>
    </form>
  </dd>
</dl>
<div>
  <h2>Own Photos (<%= @user.own_photos.count %>)</h2>
</div>
<div style="padding-top: 10px;">
  <table border="1">
    <tr>
      <th>
        Image
      </th>
      <th>
        Owner
      </th>
      <th>
        Caption
      </th>
      <th>
        Posted
      </th>
      <th></th>
    </tr>

      <% @user.own_photos.each do |photo| %>
      <tr>
        <td><img src="<%= photo.image %>"></td>
        <td><%= @user.username %></td>
        <td><%= photo.caption %></td>
        <td><%= photo.created_at %></td>
        <td><a href="/photos/<%= photo.id %>">Show details</a></td>
      </tr>
      <% end %>

  </table>
</div>
